    <label>Nome: </label>
    <input type="text" id="Nome" />
    <input type="button" value="Enviar" onclick="incluir()" />

    <div id="div" class="div"></div>

    <script>
        function incluir() {
            $.post("/Home/Create", {
                Nome: $("#Nome").val()
            }).done(function (data) {

                $.each(data, function (index, data) {
                    $('#div').append('<p>' + data.Nome + '</p>');
                    //console.log(data);
                });
                
                //alert("Json retona: " + data);
            });
        }
    </script>

